{{> menu active="station" }}
<section class="pt-6">
</section>
<section class="pt-6 has-text-centered">
<p class=" title">
          {{station.title}}
        </p>
  
<hr>
</section>
<section class="box mt-3">
{{> liststationsdata}}
</section>
<section class="box section">
 <div class="ui segment" id="chart"></div>
</section>
<section class="box section">
  {{> list-reports}}
 
  {{> add-report}}
  <form class="box" action="/station/{{station._id}}/addautoreport" method="POST"  >

  <button class="button is-danger ">Auto Generating Reading</button>
</form>
  
  
 <section class="section">
    <h2 class="subtitle">Enter location for reading</h2>
    <form action="/station/{{station._id}}/addchartreport" method="POST">
     
      <div class="field is-grouped">
        <button class="button is-link">Generate Chart</button>
      </div>
    </form>
  </section>
  
   <script>

const data = {
    labels: [
      {{#each station.trendLabels}}
        "{{this}}",
      {{/each}}
    ],
    datasets: [
      {
        name: "Temperature", type: "line",
        values: [
          {{#each station.tempTrend}}
            {{this}},
          {{/each}}
        ]
      }
    ]
  }

  const chart = new frappe.Chart("#chart", {
    title: "Temperature Trend",
    data: data,
    type: 'line',
    height: 250,
  })

</script> 

</section> 