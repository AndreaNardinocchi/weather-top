<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Password</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each station.users}}
    <tr>
      <td>
        {{firstName}} 
      </td>
      <td>
        {{lastName}} 
      </td>
      <td>
        {{email}}
      </td>
      <td>
        {{password}} 
      </td>
      <td>
        <a href="/station/{{../station._id}}/edituser/{{_id}}" class="button">
          {{>icons/edit}}
        </a>
      </td>
      <td>
        <a href="/station/{{../station._id}}/deleteuser/{{_id}}" class="button">
          {{>icons/delete}}
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>